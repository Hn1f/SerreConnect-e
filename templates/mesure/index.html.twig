{% block stylesheet %} {% endblock %}

{% block body %}
    <div class="controle">
    {{ form_start(form) }}
        <div class="controle-element">
            {{ form_label(form.mode) }}
            <label class="switch"> 
                {{ form_widget(form.mode) }}
                <span class="slider round"></span>
            </label>
        </div>
        <div class="controle-element">
            {{ form_row(form.tempConsigne) }}
        </div>
        <div class="controle-element">
                {{ form_row(form.SoilHumidity) }}
        </div>
        <div class="controle-element">
            {{ form_label(form.arrosage) }}
            <label class="switch">
                {{ form_widget(form.arrosage) }}
            </label>
        </div>
        <div class="controle-element">
            {{ form_label(form.ventilation) }}
            <label class="switch"> 
                {{ form_widget(form.ventilation) }}
            </label>
        </div>
    {{ form_end(form) }}
    </div>
    <div class="wrapper">
        {{ render_chart(chart, {'canva': 'my-chart'}) }}
    </div>
</div>
{% endblock %}
